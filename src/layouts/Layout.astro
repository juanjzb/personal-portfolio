---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--background-color: #303c6c;
		--primary-color: #d2fdff;
		--secondary-color: #ffd2a1;
		--accent-color: #ff6f61;
		--alternative-color-1: #ffffff;
		--alternative-color-2: #a1d2ff;
		--complementary-color-1: #6c303c;
		--complementary-color-2: #a1ffd2;
	}

	html {
		font-family: "Poppins";
		background-color: var(--background-color);
		max-width: 1200px;
		min-width: 390px;
		margin: 0 auto;
		font-size: 16px;
	}

	body {
		color: var(--primary-color);
		line-height: 2.2rem;
		margin: 0 30px;
		@media (width<= 900px) {
			max-width: 100%;
			padding: 0 5px;
			margin: 0 auto;
			overflow-x: hidden;
		}
	}

	section {
		padding: 10px 10px;
	}

	h1 {
		font-size: 1.8rem;
		font-weight: bold;
	}

	h2 {
		font-weight: 500;
		margin-bottom: 10px;
	}

	a {
		text-decoration: none;
		cursor: pointer;
	}
</style>
